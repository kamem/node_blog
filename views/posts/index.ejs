<% include ../header %>

<h1>Posts</h1>
<ul>
	<% for(var i = 0;i < posts.length;i++) { %>
	<li>
		<a href="/posts/<%= posts[i].entryId %>"><%= posts[i].title %></a>
		<a href="/posts/<%= posts[i].entryId %>/edit">[Edit]</a>
		<form method="post" action="/posts/<%= posts[i].entryId %>">
			<input type="submit" value="del">
			<input type="hidden" name="_method" value="delete">
			<input type="hidden" name="id" value="<%= posts[i].entryId %>">
			<input type="hidden" name="_csrf" value="<%= csrftoken %>">
		</form>
	</li>
	<% } %>
</ul>

<p><a href="/posts/new">Add new</a></p>

<% include ../footer %>